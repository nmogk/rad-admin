<div class="form-group">
    <label for="authorField">Author</label>
    <input class="form-control" type="text" name="authorField" id="authorField" data-bind="textInput: author">
</div>
<div class="form-group">
    <label for="titleField">Title</label>
    <input class="form-control" type="text" name="titleField" id="titleField" data-bind="textInput: title">
</div>
<div class="form-group">
    <label for="dateField">Date</label>
    <input class="form-control" type="text" name="dateField" id="dateField" data-bind="textInput: date">
    <small id="dateHelp" class="form-text text-muted">Use ISO 8601 format: yyyy[-mm[-dd]]</small>
</div>
<div class="form-group">
    <label for="referenceField">Reference</label>
    <input class="form-control" type="text" name="referenceField" id="referenceField" data-bind="textInput: reference">
</div>
<div class="form-group">
    <label for="sourceField">Source</label>
    <input class="form-control" type="text" name="sourceField" id="sourceField" data-bind="textInput: source">
</div>
<div class="form-group">
    <label for="pageField">Page</label>
    <input class="form-control" type="text" name="pageField" id="pageField" data-bind="textInput: page">
    <small id="runtimeHelp" class="form-text text-muted">When "Source" is "DVD"|"CD"|"cassette", this field represents run time.</small>
</div>
<div class="form-group">
    <label for="abstField">Abstract</label>
    <textarea class="form-control" rows="8" name="abstField" id="abstField" data-bind="textInput: abst"></textarea>
</div>