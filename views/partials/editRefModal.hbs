<div class="modal fade" id="editRefModal" role="dialog" tabindex=0>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
                <h4 class="modal-title">
                    Edit Reference <span data-bind="text: id"></span>
                </h4>
            </div>
            <form id="refEditForm" data-bind="submit: $data.submitEdits">
                <div class="modal-body">
                    {{> refFormFields}}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: revert">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>