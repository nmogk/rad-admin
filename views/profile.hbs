{{#> layout title="Profile" nav=1}}
    {{#*inline "custom-title"}}<h1>{{username}}</h1>{{/inline}}  
    
    {{#*inline "search-area"}}
        <a href='/profile/password' class="btn btn-primary" ><span class="glyphicon glyphicon-wrench"></span> Update Password</a><a href="#" class="btn btn-link" data-toggle="modal" data-target="#deleteModal"><span class="glyphicon glyphicon-trash"></span> Delete Account</a>
    {{/inline}}   


    {{#*inline "results-area"}}
        <dl>
            <dt>Display Name: <a href='#' class="btn btn-link" data-toggle="modal" data-target="#dispNameModal"><span class="glyphicon glyphicon-pencil"></span> Change</a></dt>
            <dd>{{#if dispname}}{{dispname}}{{else}}(Not added yet){{/if}}</dd>
            <dt>Email: <a href="#" class="btn btn-link" data-toggle="modal" data-target="#emailModal"><span class="glyphicon glyphicon-pencil"></span> Change</a></dt>
            <dd>{{email}}</dd>
        </dl>
    {{/inline}}  

    {{#*inline "modal-block"}}

    <div class="modal fade" id="dispNameModal" role="dialog" tabindex=0>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
            <h4 class="modal-title">Change Display Name</h4>
          </div>
          <form class="form-horizontal" method="post">
            <div class="modal-body">
              <div class="form-group">
                <label class="control-label">Display Name:</label>
                <input name="name" class="form-control" type="text" placeholder="{{#if dispname}}{{dispname}}{{else}}Type Name here{{/if}}">
              </div> 
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <div class="modal fade" id="emailModal" role="dialog" tabindex=0>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
            <h4 class="modal-title">Change Email Address</h4>
          </div>
          <form class="form-horizontal" method="post">
            <div class="modal-body">
              <div class="form-group">
                <label class="control-label">Display Name:</label>
                <input name="email" class="form-control" type="email" placeholder="{{email}}">
              </div> 
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>  

    <div class="modal fade" id="deleteModal" role="dialog" tabindex=0>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
            <h4 class="modal-title">Delete Account</h4>
          </div>
            <div class="modal-body">
              <p>Are you sure you want to delete? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="sendDelete()" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
      </div>
    </div>  
    
    {{/inline}} 
    {{#*inline "scripts-block"}}
        <script>

            function sendDelete(){
                $.ajax({
                    method: 'DELETE'
                });

                window.location.reload(true);

            }

        </script>
    {{/inline}} 
{{/layout}}