<div class="modal fade" id="newRefModal" role="dialog" tabindex=0>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
                <h4 class="modal-title">Add New Reference</h4>
            </div>
            <form class="refInput" method="post" action="/refs/new" target="_blank">
                <div class="modal-body">
                    {{> refFormFields}}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info" data-dismiss="modal">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>